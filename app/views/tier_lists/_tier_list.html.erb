<div id="<%= dom_id tier_list %>">
    <li>
        <%= link_to "View #{tier_list.title}", user_tier_list_path(@user, tier_list) %>
        <% if current_user?(tier_list.user) %>
            <%= link_to 'update', edit_user_tier_list_path(@user, tier_list) %>
            <%= link_to "delete", [@user, tier_list], data: { "turbo-method": :delete, turbo_confirm: "Are you sure you want to delete your tier list #{tier_list.title}?"} %>
        <% end %>
    </li>
</div>
